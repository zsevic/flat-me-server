{
  "name": "flat-me-server",
  "version": "0.0.1",
  "description": "Back-end for FlatMe",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"database/**/*.ts\" \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{database,src,test}/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "migration:create": "npm run typeorm -- migration:create -c migration -n $1",
    "migrate": "npm run typeorm -- migration:run -c migration",
    "migrate:down": "npm run typeorm -- migration:revert -c migration",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_PATH=./dist NODE_ENV=production node dist/src/main",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/common/config/database/ormconfig.ts"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.6.0",
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/typeorm": "^8.0.2",
    "axios": "^0.21.1",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.11.1",
    "handlebars": "^4.7.7",
    "i18n": "^0.13.3",
    "joi": "^17.4.2",
    "morgan": "^1.9.1",
    "nest-winston": "^1.4.0",
    "nodemailer": "^6.6.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.3.0",
    "swagger-ui-express": "^4.1.3",
    "ts-node": "^8.7.0",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.37",
    "typeorm-transactional-cls-hooked": "^0.1.21",
    "typescript": "^4.4.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.1.1",
    "@nestjs/schematics": "^8.0.3",
    "@nestjs/testing": "^8.0.6",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.12",
    "@types/jest": "^27.0.1",
    "@types/node": "^13.13.52",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^2.26.0",
    "@typescript-eslint/parser": "^2.26.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "husky": "^4.3.0",
    "jest": "^27.1.0",
    "lint-staged": "^10.4.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^27.0.5",
    "ts-loader": "^6.2.1"
  },
  "jest": {
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "resetMocks": true,
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix",
      "npm run format",
      "git add --force"
    ]
  }
}
